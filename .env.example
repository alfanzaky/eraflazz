# Application Configuration
APP_NAME=Eraflazz
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eraflazz_db
DB_USER=eraflazz_user
DB_PASSWORD=eraflazz_password
DB_SSLMODE=disable
DB_MAX_IDLE=10
DB_MAX_OPEN=100
DB_MAX_LIFE=1h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH=168h

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@eraflazz.com

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30
API_MAX_REQUEST_SIZE=1048576

# Supplier API Keys (add your supplier credentials here)
DIGIFLAZZ_API_KEY=your-digiflazz-api-key
DIGIFLAZZ_USERNAME=your-digiflazz-username

VIP_API_KEY=your-vip-api-key
VIP_USERNAME=your-vip-username

# WhatsApp Bot Configuration
WA_API_URL=https://your-wa-gateway.com
WA_API_KEY=your-wa-api-key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# H2H API Configuration
H2H_API_KEY=your-h2h-api-key
H2H_API_SECRET=your-h2h-api-secret
H2H_ALLOWED_IPS=127.0.0.1,192.168.1.100,10.0.0.0/8
